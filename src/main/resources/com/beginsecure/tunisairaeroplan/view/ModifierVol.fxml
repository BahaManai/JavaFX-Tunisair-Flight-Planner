<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<ScrollPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.beginsecure.tunisairaeroplan.Controller.ModifierVolController"
            fitToWidth="true"
            style="-fx-background: #f5f5f5;"
            prefViewportWidth="800"
            prefViewportHeight="600"
            stylesheets="@style.css">

    <content>
        <VBox spacing="15" alignment="TOP_CENTER" style="-fx-background-color: #f5f5f5; -fx-padding: 15;">
            <Label text="Modifier le vol" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;">
                <font>
                    <Font name="System Bold" size="16.0" />
                </font>
            </Label>

            <GridPane hgap="10" vgap="10" alignment="CENTER" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" minWidth="120" prefWidth="120"/>
                    <ColumnConstraints minWidth="200" prefWidth="200" hgrow="ALWAYS"/>
                </columnConstraints>

                <Label text="Numéro du vol:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="numVolField" GridPane.rowIndex="0" GridPane.columnIndex="1" editable="false"/>

                <Label text="Destination:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <TextField fx:id="destinationField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Date de départ:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateDepartPicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Heure de départ:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="heureDepartField" promptText="HH:mm" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

                <Label text="Date d'arrivée:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dateArriveePicker" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

                <Label text="Heure d'arrivée:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <TextField fx:id="heureArriveeField" promptText="HH:mm" GridPane.rowIndex="5" GridPane.columnIndex="1"/>

                <Label text="Type de trajet:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <ComboBox fx:id="typeTrajetComboBox" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

                <Label text="Statut du vol:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <ComboBox fx:id="statutComboBox" GridPane.rowIndex="7" GridPane.columnIndex="1"/>

                <Label text="Avion:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <ComboBox fx:id="avionCombo" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

                <Label text="Équipage:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                <ComboBox fx:id="equipageCombo" GridPane.rowIndex="9" GridPane.columnIndex="1" disable="true"/>
            </GridPane>

            <HBox spacing="15" alignment="CENTER" style="-fx-padding: 15 0 0 0;">
                <Button fx:id="saveButton" text="Modifier Vol"
                        style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"
                        onAction="#saveVol"/>
                <Button fx:id="cancelButton" text="Annuler"
                        style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 5 15;"
                        onAction="#cancelModification"/>
            </HBox>
        </VBox>
    </content>
</ScrollPane>