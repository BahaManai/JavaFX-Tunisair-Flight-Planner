<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.image.ImageView?>
<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.beginsecure.tunisairaeroplan.Controller.HomeController"
            stylesheets="@home.css"
            styleClass="home-root">

    <children>
        <VBox layoutX="0" layoutY="0" prefWidth="800" prefHeight="600" alignment="CENTER" styleClass="center-container">
            <children>
                <ImageView fx:id="avionLogo" fitWidth="160" fitHeight="50"/>

                <VBox spacing="20" alignment="CENTER" styleClass="card">
                    <Label fx:id="bienvenueLabel" text="Système de Gestion des Vols" wrapText="true" styleClass="title-label"/>
                    <Label fx:id="projetDescriptionLabel" text="Découvrez notre flotte aérienne" wrapText="true" styleClass="subtitle-label"/>

                    <VBox spacing="10" alignment="CENTER" styleClass="dev-container">
                        <Label text="Développé par :" styleClass="dev-title"/>
                        <Label fx:id="developpeursLabel" text="Ferchichi Molka et Baha Eddine Mannai" styleClass="dev-name"/>
                    </VBox>
                </VBox>
            </children>
        </VBox>
    </children>
</AnchorPane>
