<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.beginsecure.tunisairaeroplan.Controller.ListeVolController">

    <top>
        <Label text="Liste des Vols"
               style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 15 15 15 15;" BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox>
            <TableView fx:id="volTable" prefHeight="400" prefWidth="900">
                <columns>
                    <TableColumn fx:id="colNumVol" text="Numéro Vol" />
                    <TableColumn fx:id="colDestination" text="Destination" />
                    <TableColumn fx:id="colDepart" text="Départ" />
                    <TableColumn fx:id="colArrivee" text="Arrivée" />
                    <TableColumn fx:id="colTypeTrajet" text="Type Trajet" />
                    <TableColumn fx:id="colStatut" text="Statut" />
                    <TableColumn fx:id="colAvion" text="Avion" />
                    <TableColumn fx:id="colEquipage" text="Équipage" />
                    <TableColumn fx:id="colModifier" text="Modifier" />
                    <TableColumn fx:id="colArchiver" text="Archiver" />
                </columns>
            </TableView>

            <HBox alignment="CENTER_LEFT" spacing="10">
                <Button fx:id="btnAjouterVol" text="Ajouter Vol"
                        onAction="#ouvrirAjoutVol"
                        style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Button fx:id="btnVoirArchive" text="Voir archive Vol"
                        onAction="#ouvrirArchiveVol"
                        style="-fx-background-color: #607D8B; -fx-text-fill: white;"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
