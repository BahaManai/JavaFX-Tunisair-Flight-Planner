<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane fx:id="interfaceMembre" prefHeight="400.0" prefWidth="650.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.beginsecure.tunisairaeroplan.Controller.MembreController">
    <children>
        <Button fx:id="btnAjouter" layoutX="30" layoutY="20" onAction="#ajouterMembre" text="Ajouter" />
        <Button fx:id="btnModifier" layoutX="120" layoutY="20" onAction="#modifierMembre" text="Modifier" />
        <Button fx:id="btnSupprimer" layoutX="220" layoutY="20" onAction="#supprimerMembre" text="Supprimer" />
        <Button fx:id="btnConsulter" layoutX="340" layoutY="20" onAction="#consulterMembre" text="Consulter" />

        <TextField fx:id="txtCin" layoutX="30" layoutY="70" promptText="CIN" />
        <TextField fx:id="txtNom" layoutX="150" layoutY="70" promptText="Nom" />
        <TextField fx:id="txtPrenom" layoutX="270" layoutY="70" promptText="Prénom" />
        <TextField fx:id="txtRole" layoutX="390" layoutY="70" promptText="Rôle" />
        <CheckBox fx:id="chkDisponible" layoutX="556.0" layoutY="74.0" text="Disponible" />

        <TableView fx:id="tvMembre" layoutX="30" layoutY="120" prefHeight="250" prefWidth="580">
            <columns>
                <TableColumn fx:id="colCin" prefWidth="100" text="CIN" />
                <TableColumn fx:id="colNom" prefWidth="100" text="Nom" />
                <TableColumn fx:id="colPrenom" prefWidth="100" text="Prénom" />
                <TableColumn fx:id="colRole" prefWidth="100" text="Rôle" />
                <TableColumn fx:id="colDisponible" prefWidth="100" text="Disponible" />
            </columns>
        </TableView>
    </children>
</AnchorPane>
