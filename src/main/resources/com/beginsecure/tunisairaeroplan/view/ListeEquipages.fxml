<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600" prefWidth="900" stylesheets="@../css/equipage.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.beginsecure.tunisairaeroplan.Controller.EquipageController">

    <VBox prefHeight="528.0" prefWidth="968.0" spacing="20">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <Label styleClass="title" text="Liste des Équipages" />

        <HBox spacing="20">
            <TableView fx:id="tableEquipages" prefHeight="400.0" prefWidth="572.0">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                    <TableColumn fx:id="colNom" prefWidth="150" text="Nom Équipage" />
                    <TableColumn fx:id="colVol" prefWidth="85.60005187988281" text="Vol" />
                    <TableColumn fx:id="colHeure" prefWidth="251.1999633789062" text="Départ → Arrivée" />
                </columns>
            </TableView>

            <TableView fx:id="tableMembres" prefHeight="400.0" prefWidth="390.0">
                <columns>
                    <TableColumn fx:id="colNomMembre" prefWidth="130" text="Nom" />
                    <TableColumn fx:id="colPrenomMembre" prefWidth="118.39997863769531" text="Prénom" />
                    <TableColumn fx:id="colRoleMembre" prefWidth="142.4000244140625" text="Rôle" />
                </columns>
            </TableView>
        </HBox>

        <Label fx:id="lblMessage" styleClass="message" text="" />
    </VBox>
</AnchorPane>
