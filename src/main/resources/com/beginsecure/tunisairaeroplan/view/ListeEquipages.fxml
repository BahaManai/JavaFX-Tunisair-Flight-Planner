<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.beginsecure.tunisairaeroplan.Controller.EquipageController">
    <top>
        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-padding: 15 15 15 15;" text="Liste des Équipages" BorderPane.alignment="CENTER" />
    </top>

    <center>
        <VBox spacing="20">
            <HBox prefHeight="318.0" prefWidth="900.0" spacing="20">
                <TableView fx:id="tableEquipages" prefHeight="300.0" prefWidth="500.0">
                    <columns>
                        <TableColumn fx:id="colId" prefWidth="50" text="ID" />
                        <TableColumn fx:id="colNom" prefWidth="150" text="Nom Équipage" />
                        <TableColumn fx:id="colVol" prefWidth="100" text="Vol" />
                        <TableColumn fx:id="colHeure" prefWidth="200" text="Départ → Arrivée" />
                    </columns>
                </TableView>
                <ImageView fx:id="equipageImage" fitHeight="273.0" fitWidth="319.0">
                    <image>
                        <Image url="@../images/Equipage.png" />
                    </image>
                </ImageView>
            </HBox>

            <Label fx:id="lblMessage" style="-fx-font-size: 14px; -fx-text-fill: #e74c3c;" text="" />

            <StackPane alignment="CENTER" prefHeight="246.0" prefWidth="900.0">
            <children>
   
                   <TableView fx:id="tableMembres" prefHeight="246.0" prefWidth="611.0">
                       <columns>
                           <TableColumn fx:id="colNomMembre" prefWidth="120" text="Nom" />
                           <TableColumn fx:id="colPrenomMembre" prefWidth="110" text="Prénom" />
                           <TableColumn fx:id="colRoleMembre" prefWidth="120" text="Rôle" />
                       </columns>
                   </TableView>
            </children>
            </StackPane>
        </VBox>
    </center>
</BorderPane>
